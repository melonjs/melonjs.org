---
import MDLayout from './MDLayout.astro'
import '../styles/markdown.scss'
const pathname = new URL(Astro.request.url).pathname
const { props } = Astro
const passProps = { ...props.content }
delete passProps.astro
---
<MDLayout {...passProps}>
    <style>
        .tutorial-home {
            margin-bottom: -5vmin;
        }
    </style>
    {
        pathname === '/tutorial' ? null : (
            <a class="tutorial-home" href="/tutorial">Tutorial: Hacking a Platformer Game</a>
        )
    }
    <slot />
</MDLayout>
